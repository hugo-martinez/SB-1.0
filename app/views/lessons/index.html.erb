<p id="notice"><%= notice %></p>

<h1>Lessons</h1>

<table>
  <thead>
    <tr>
      <th>Course origin</th>
      <th>Teacher</th>
      <th>Pupil</th>
      <th>Origin</th>
      <th>Date</th>
      <th>Location</th>
      <th>Cost</th>
      <th>Evolution</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.course_origin %></td>
        <td><%= lesson.teacher_id %></td>
        <td><%= lesson.pupil_id %></td>
        <td><%= lesson.origin_id %></td>
        <td><%= lesson.date %></td>
        <td><%= lesson.location %></td>
        <td><%= lesson.cost %></td>
        <td><%= lesson.evolution %></td>
        <td><%= link_to 'Show', lesson %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
        <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lesson', new_lesson_path %>
